<Page x:Class="Store_BD_Admin.Views.SignIn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Store_BD_Admin.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SignIn">

    <Grid Background="LightCyan">
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="200">

            <TextBlock Text="Login:"/>
            <TextBox x:Name="login"/>
            <TextBlock Text="Password:" Margin="0 10 0 0"/>
            <TextBox x:Name="password"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="signIn" Content="SignIn" Width="50" Height="20" Margin="10 10 10 0" Click="signIn_Click" IsDefault="True"/>
                <Button x:Name="signUp" Content="SignUp" Width="50" Height="20" Margin="10 10 10 0" Click="signUp_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
